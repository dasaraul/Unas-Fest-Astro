---
interface Timeline {
  title: string;
  description: string;
  month: string;
  date: string;
  year: string;
  color: string;
}

interface Props {
  title: string;
  description: string;
  timelines: Timeline[];
}

const { title, description, timelines } = Astro.props;
---

<div class="w-full">
  <div class="flex items-center gap-2">
    <h2 class="text-3xl font-bold">{title}</h2>
  </div>
  <p class="mt-2 text-gray-600">{description}</p>
  
  <div class="mt-8 flex w-full flex-col flex-nowrap gap-4 overflow-x-auto md:flex-row">
    {timelines.map((timeline) => (
      <div class="flex h-[240px] w-[320px] max-w-[320px] flex-shrink-0 flex-col rounded-2xl border p-4 shadow-md md:h-[200px] md:w-[250px] md:max-w-[250px]">
        <div class="mb-4 flex items-center justify-between">
          <div class="flex flex-col">
            <span 
              class="text-2xl font-bold" 
              style={{ color: timeline.color }}
            >
              {timeline.month}
            </span>
            <span class="text-lg font-medium">{timeline.date}, {timeline.year}</span>
          </div>
          <div 
            class="h-[30px] w-[30px] rounded-full" 
            style={{ backgroundColor: timeline.color }}
          ></div>
        </div>
        <div>
          <h3 class="font-bold">{timeline.title}</h3>
          <p class="mt-2 text-sm text-gray-600">{timeline.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>