---
import { Image } from 'astro:assets';
import Button from './ui/Button.astro';

interface Props {
  contact: any;
  contactNumber: string;
}

const { contact, contactNumber } = Astro.props;
---

<div class="relative mx-auto mb-12 w-full max-w-screen-xl px-6 md:mt-20 lg:w-[90%]">
  <div class="flex flex-col items-center justify-between gap-10 rounded-2xl bg-black p-8 md:flex-row md:p-14">
    <!-- Left side content -->
    <div class="flex flex-col text-white md:w-1/2">
      <h2 class="mb-4 text-4xl font-bold md:text-5xl">{contact.title}</h2>
      <p class="mb-6 text-gray-300">{contact.description}</p>
      <div class="mb-6 flex flex-col gap-4">
        {contactNumber && (
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span>{contactNumber}</span>
          </div>
        )}
        {contact.email && (
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <span>{contact.email}</span>
          </div>
        )}
        {contact.address && (
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{contact.address}</span>
          </div>
        )}
      </div>
      
      <!-- Social Media Links -->
      {contact.socialLinks && (
        <div class="flex gap-6">
          {contact.socialLinks.instagram && (
            <a href={contact.socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="hover:text-gray-300">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
              </svg>
            </a>
          )}
          {contact.socialLinks.tiktok && (
            <a href={contact.socialLinks.tiktok} target="_blank" rel="noopener noreferrer" class="hover:text-gray-300">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            </a>
          )}
          {contact.socialLinks.youtube && (
            <a href={contact.socialLinks.youtube} target="_blank" rel="noopener noreferrer" class="hover:text-gray-300">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
    
    <!-- Right side image -->
    <div class="md:w-1/2">
      {contact.image && (
        <Image
          src={contact.image}
          alt="Contact Us"
          class="max-h-[400px] w-full rounded-lg object-cover"
        />
      )}
    </div>
  </div>
  
  <!-- Contact buttons -->
  {contact.buttons && (
    <div class="mt-6 flex flex-col gap-4 md:flex-row md:justify-center">
      {contact.buttons.map((button) => (
        <Button
          href={button.link}
          variant={button.variant || "default"}
          class={button.class || ""}
        >
          {button.text}
        </Button>
      ))}
    </div>
  )}
</div>